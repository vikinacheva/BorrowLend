@model IEnumerable<BorrowLend.Models.Item>

<div class="container - p-3">
    <div class="row pt-4">
        <div class="col-6">
            <h2 class="text-primary">
                Borrowed Item List
            </h2>
        </div>
    </div>
    <div class="col-6 text-right" style="float:right; text-align:end">
        <a class="btn btn-primary w-75" asp-controller="Item" asp-action="Create">Create new item</a>
    </div>
    <br/>
    <br/>
    @if (Model.Count() > 0)
    {
        <table class="table table-bordered table-striped" style="width:100%">
            <thead>
                <th> Item Name </th>
                <th> Borrower </th>
                <th> Lender </th>
                <th> Changes </th>
            </thead>
            <tbody>
                @foreach (var item in Model)
                {
                    <tr>
                        <td width="25%">@item.ItemName</td>
                        <td width="25%">@item.Borrower</td>
                        <td width="25%">@item.Lender</td>
                        <td width="25%">
                            <a class="btn btn-success m-1" asp-controller="Item" asp-action="Update" asp-route-id=@item.Id>Update</a>
                            <a class="btn btn-danger m-1" asp-controller="Item" asp-action="Delete" asp-route-id=@item.Id>Delete</a>
                        </td>
                    </tr>
                }
            </tbody>
        </table>
    } 
</div>
